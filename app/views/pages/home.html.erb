<div class="banner">
  <div class="container">
    <div class="">
      <h1>Find the right
        <br />
        healthcare provider
        <br />
        for you
      </h1>
    </div>
      <div class="search-bar">
        <%= form_with method: :get, class: "search" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Specialty"
          %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Location"
          %>
          <%= submit_tag "Search", class: "button", type: 'submit' %>
        <% end %>
      </div>
  </div>
</div>


<div class="container">
  <div class="" >
    <div class="card-grid">
    <% @doctor_profiles.each do |doctor|%>
      <div class="home">
      <div class="">
        <%= image_tag "doc1.jpg", class: "avatar-medium", alt: "Doctor Image" %>
          <div class="card-body">
          <h5 class="name">Dr. <%= doctor.user.first_name %> <%= doctor.user.last_name %></h5>
          <p class="specialty"><%= doctor.specialty %></p>
          <p class="address"><%= doctor.practice_address %></p>
          <hr>
            <%= link_to "View Doctor", doctor_profile_path(doctor), class: "button" %>
            </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <div id="map sticky-top">
      <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
      </div>
    </div>
  </div>
</div>
