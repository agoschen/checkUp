
<div class="container">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>




<div class="row">
  <div class="col-md-6">
   <% @doctor_profiles.each do |doctor|%>
    <div class="card mb-3">
      <%= image_tag "doc1.jpg", class: "card-img-top", alt: "Doctor Image" %>
            <div class="card-body">
        <h5 class="card-title mb-1">Dr. <%= doctor.user.first_name %> <%= doctor.user.last_name %></h5>
        <p class="card-text text-muted mb-2"><strong>Specialty:</strong> <%= doctor.specialty %></p>
        <p class="card-text text-muted mb-2"><strong>Location:</strong> <%= doctor.practice_address %></p>
        <hr>
         <button type="button" class="btn btn-primary">Book Now</button>
          <%= link_to "Show more...", doctor_profile_path(doctor) %>
      </div>

    </div>
     <% end %>
  </div>
  <div class="col-md-6">
    <div id="map">
    <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
    </div>
  </div>
</div>
